<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".credits">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:gravity="center|top"
            android:text="Credits"
            android:autoSizeMaxTextSize="36sp"
            android:autoSizeMinTextSize="28sp"
            android:autoSizeStepGranularity="1sp"
            android:autoSizeTextType="uniform" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="3"
            android:gravity="center|top"
            android:text='This app was created by Damian Czarnota for subject "Mobile Technology".'
            android:autoSizeMaxTextSize="36sp"
            android:autoSizeMinTextSize="28sp"
            android:autoSizeStepGranularity="1sp"
            android:autoSizeTextType="uniform" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="3"
            android:gravity="center|top"
            android:text=" The aim of this app is to provide user with a simple and advanced calculator."
            android:autoSizeMaxTextSize="36sp"
            android:autoSizeMinTextSize="28sp"
            android:autoSizeStepGranularity="1sp"
            android:autoSizeTextType="uniform" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>